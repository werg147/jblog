<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">

	<!-- 카테고리 리스트 가져오기 -->
	<select id="selectList" parameterType="String" resultType="CategoryVo">
		<![CDATA[
			select cateNo,
                   id,
                   cateName,
                   description,
                   regDate
            from category
            where id = #{id}
            order by cateNo desc
		]]>
	</select>

	<!-- 카테고리 추가 등록하기 -->
	<insert id="cateInsert" parameterType="CategoryVo">
		<![CDATA[
			insert into category
            values(
                seq_category_no.nextval,
            	#{cateNo},
                #{id},
                #{cateName},
                #{description},
                sysdate
            )
		]]>
	</insert>

	<!-- 카테고리 추가등록 정보 1개 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="CategoryVo">
		<![CDATA[
			select cateNo,
                   id,
                   cateName,
                   description,
                   regDate
            from category
            where cateNo = #{cateNo}
		]]>
	</select>
	
	<!-- 카테고리 삭제하기 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from category
            where cateNo = #{cateNo}
		]]>
	</delete>
	
	<!-- 등록폼 cateName 가져오기 -->
	<select id="selectForm" parameterType="string" resultType="CategoryVo">
		<![CDATA[
			select cateNo,
			       cateName
            from category
            where id = #{id}
		]]>
	</select>



</mapper>